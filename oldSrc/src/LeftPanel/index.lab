(import store from "../store/index.lab")

(let leftPanelChoose (style.create {
           width:"100%",
           height:"30px",
           lineHeight:"30px",
           border:"0px 0px 1px 0px",
        }
)) 

(let leftPanelChoosed (style.create {
           width:"100%",
           height:"30px",
           lineHeight:"30px",
           border:"0px 0px 1px 0px",
           backgroundColor:"54|140|245|255"
        }
))

(style.push (+ "." leftPanelChoose ":hover") {
   backgroundColor:"54|140|245|255"
})

(function (ChooseIterm props)
   (let theName (if (== store.storeState.ChooseIterm props.item)  leftPanelChoosed leftPanelChoose))

   
   (console.log props.itemName theName)
    <div className={theName} 
     onClick={(lambda () 
        (set store.storeState.ChooseIterm props.item)
        (store.Forceupdate )
      )} 
    >{props.itemName}</div>
)

(function (LeftPanel props)
    <div >
      <ChooseIterm itemName={"按钮"} item={"button"}></ChooseIterm>
      <ChooseIterm itemName={"表单"} item={"form"}></ChooseIterm>
      <ChooseIterm itemName={"图像"} item={"ImgTest"}></ChooseIterm>
      <ChooseIterm itemName={"画布"} item={"Canvas"}></ChooseIterm>
      <ChooseIterm itemName={"表格"} item={"table"}></ChooseIterm>
      <ChooseIterm itemName={"音视频"} item={"VideoAudio"}></ChooseIterm>
      <ChooseIterm itemName={"http请求"} item={"http"}></ChooseIterm>
    </div > 
)



(export {
  LeftPanel:LeftPanel
})

